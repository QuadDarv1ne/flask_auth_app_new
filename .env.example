# Пример конфигурации для Flask Auth App
# Скопируйте этот файл в .env и настройте свои значения

# Секретный ключ для Flask (ОБЯЗАТЕЛЬНО измените в продакшене!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# URL базы данных
# Для SQLite (по умолчанию):
DATABASE_URL=sqlite:///users.db
# Для PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/dbname
# Для MySQL:
# DATABASE_URL=mysql://username:password@localhost/dbname

# Режим отладки (установите False в продакшене)
FLASK_DEBUG=True

# Окружение (development, production, testing)
FLASK_ENV=development
