# Пример конфигурации для Flask Auth App
# Скопируйте этот файл в .env и настройте свои значения

# Секретный ключ для Flask (ОБЯЗАТЕЛЬНО измените в продакшене!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# URL базы данных
# Для SQLite (по умолчанию):
DATABASE_URL=sqlite:///users.db
# Для PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/dbname
# Для MySQL:
# DATABASE_URL=mysql://username:password@localhost/dbname

# Режим отладки (установите False в продакшене)
FLASK_DEBUG=True

# Окружение (development, production, testing)
FLASK_ENV=development

# Настройки электронной почты (для отправки писем)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@flaskauth.com

# URL приложения (для генерации ссылок)
APP_URL=http://localhost:5000

# Настройки производительности
CACHE_TIMEOUT=300

